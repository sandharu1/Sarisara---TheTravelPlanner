<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewStartingCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting City"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="30dp">
        </TextView>

        <AutoCompleteTextView
            android:id="@+id/autocomplete_StartingCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/TextViewDestinationCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination City"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark">
        </TextView>

        <AutoCompleteTextView
            android:id="@+id/autocomplete_DestinationCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/TextViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration of Travel"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark">
        </TextView>

        <EditText
            android:id="@+id/EditTextDuration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/TextViewSpace"
            android:layout_width="match_parent"
            android:layout_height="10pt"
            
            android:text=""
            android:textSize="8pt" >
        </TextView>

        <Button
            android:id="@+id/ButtonGoToSelectInterests"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="sendFeedback"
            android:background="@drawable/gradient"
            android:text="Go To Select Interests" />
    
</LinearLayout>
</ScrollView>


