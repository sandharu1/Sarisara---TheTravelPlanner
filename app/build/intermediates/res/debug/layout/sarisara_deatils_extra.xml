<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewShouldVisit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Please enter cities you want to visit on the journey."
            android:textSize="10pt"
            android:textColor="#ffffffff"
            android:background="@android:color/holo_green_dark"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:id="@+id/TextViewSpace2"
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:text=""
            android:textSize="8pt" >
        </TextView>

        <TextView
            android:id="@+id/textViewCity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City 1"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteSV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textViewCity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City 2"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteSV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textViewCity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City 3"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteSV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textViewCity4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City 4"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteSV4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textViewCity5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City 5"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteSV5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/TextViewSpace3"
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:text=""
            android:textSize="8pt" >
        </TextView>

        <Button
            android:id="@+id/ButtonGoTShouldAvoid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="sendFeedback"
            android:background="@drawable/gradient"
            android:text="Go To Select Cities Should Avoid" />

        <Button
            android:id="@+id/ButtonSendTavelDetailsWithSVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:layout_marginTop="10dp"
            android:text="Send Sarisara Details" />
    </LinearLayout>

</ScrollView>


